/**
 * 封装组件
 * 750px 1px=1upx */
.x-card-solid {
  border-top: 1px solid #FCFCFC;
}
.x-card {
  padding: 40rpx;
  background: #FFFFFF;
}
.x-card .x-if-card {
    height: 170rpx;
}
.x-card .x-card-header {
    float: left;
    position: relative;
}
.x-card .x-card-header .title {
      margin-top: 7rpx;
}
.x-card .x-card-header .title text {
        color: #222222;
        font-size: 32rpx;
}
.x-card .x-card-header .user {
      height: 40rpx;
      margin-top: 18rpx;
}
.x-card .x-card-header .user image {
        float: left;
        width: 40rpx;
        height: 40rpx;
        border-radius: 50rpx;
}
.x-card .x-card-header .user text {
        float: left;
        color: #575757;
        font-size: 24rpx;
        padding: 3rpx 6rpx;
}
.x-card .x-card-header .tips {
      height: 28rpx;
      margin-top: 25rpx;
      line-height: 29.45rpx;
}
.x-card .x-card-header .tips .tip {
        float: left;
}
.x-card .x-card-header .tips .time {
        float: right;
}
.x-card .x-card-header .tips image {
        width: 28rpx;
        height: 28rpx;
        float: left;
        will-change: transform;
}
.x-card .x-card-header .tips text {
        float: left;
        color: #7f7f7f;
        font-size: 20rpx;
        margin: 0 5rpx;
}
.x-card .x-card-image {
    float: right;
}
.x-card .x-card-image image {
      width: 233rpx;
      height: 170rpx;
      border-radius: 15rpx;
}
.x-card .x-else-card-image image {
    width: 665rpx;
    height: 485rpx;
    border-radius: 15rpx;
}
.x-card .x-else-card-header {
    position: relative;
}
.x-card .x-else-card-header .title {
      margin-top: 7rpx;
}
.x-card .x-else-card-header .title text {
        color: #222222;
        font-size: 32rpx;
}
.x-card .x-else-card-header .tips {
      height: 28rpx;
      margin-top: 25rpx;
      line-height: 29.45rpx;
}
.x-card .x-else-card-header .tips .tip {
        float: left;
}
.x-card .x-else-card-header .tips .time {
        float: right;
}
.x-card .x-else-card-header .tips image {
        width: 28rpx;
        height: 28rpx;
        float: left;
        will-change: transform;
}
.x-card .x-else-card-header .tips text {
        float: left;
        color: #7f7f7f;
        font-size: 20rpx;
